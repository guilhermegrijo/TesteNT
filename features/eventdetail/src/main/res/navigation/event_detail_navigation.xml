<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/event_detail_navigation"
    app:startDestination="@id/event_detail_fragment">

    <fragment
        android:id="@+id/event_detail_fragment"
        android:name="com.br.guilherme.eventdetail.ui.EventDetailFragment"
        android:label="EventFragment"
        tools:layout="@layout/event_detail_fragment">

        <argument
            android:name="event_id"
            app:argType="string" />
        <action
            android:id="@+id/action_eventDetailFragment_to_checkinFragment"
            app:destination="@id/checkin_navigation" />
    </fragment>

</navigation>